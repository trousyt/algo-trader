# Algo-Trader Configuration
# Copy to .env and fill in your values

# Broker (Alpaca)
ALGO_BROKER__API_KEY=your-alpaca-api-key
ALGO_BROKER__SECRET_KEY=your-alpaca-secret-key
ALGO_BROKER__PAPER=true
ALGO_BROKER__FEED=iex
ALGO_BROKER__PROVIDER=alpaca

# Risk Management
ALGO_RISK__MAX_RISK_PER_TRADE_PCT=0.01
ALGO_RISK__MAX_RISK_PER_TRADE_ABS=500
ALGO_RISK__MAX_POSITION_PCT=0.05
ALGO_RISK__MAX_DAILY_LOSS_PCT=0.03
ALGO_RISK__MAX_OPEN_POSITIONS=5
ALGO_RISK__CONSECUTIVE_LOSS_PAUSE=3

# Strategy (Velez)
ALGO_VELEZ__ENABLED=true
ALGO_VELEZ__SMA_FAST=20
ALGO_VELEZ__SMA_SLOW=200
ALGO_VELEZ__CANDLE_INTERVAL_MINUTES=2

# Watchlist (JSON array format)
ALGO_WATCHLIST=["AAPL","TSLA","AMD","NVDA","META"]

# Database
ALGO_DB_PATH=data/trading.db
ALGO_DB_BUSY_TIMEOUT_MS=5000

# Logging
ALGO_LOG_LEVEL=INFO
ALGO_LOG_FORMAT=console

# Web Server
ALGO_WEB__HOST=127.0.0.1
ALGO_WEB__PORT=8000
